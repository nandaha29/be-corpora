      Content-Type: application/json
    body:
      type: json
      data: |
        {
          "email": "admin@ub.ac.id",
          "password": "wrongpassword"
        }

  - name: Login - Akun Nonaktif
    method: POST
    url: http://localhost:3000/api/v1/admin/auth/login
